<WeatherScreenView>
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            padding: dp(10)
            adaptive_height: True
            MDButton:
                on_press: root.go_back()
                MDButtonText:
                    text: "Go back"
        MDBoxLayout:
            padding: dp(20)
            md_bg_color: app.theme_cls.surfaceColor
            #md_bg_color: "#ff0000"
            MDBoxLayout:
                adaptive_height: True
                pos_hint: {"center_y": .5}
                ScrollView:
                    do_scroll_y: False
                    size_hint: 1, None
                    adaptive_width: False
                    height: dp(350)
                    MDGridLayout:
                        id: weather_tiles_list
                        rows: 1
                        row_force_default: False
                        size_hint: 1, None
                        height: dp(350)
                        spacing: dp(20)
                        adaptive_width: True


        MDBoxLayout:
            #md_bg_color: "#ff0000"
            padding: dp(20), dp(10)
            id: weather_block
            orientation: "vertical"
            adaptive_height: True
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                MDBoxLayout:
                    #md_bg_color: "#aa5500"
                    padding: dp(10), dp(0)
                    adaptive_height: True
                    MDLabel:
                        halign: "center"
                        text: "Weather forecast for:"
                        theme_text_color: "Custom"
                        text_color: "white"
                MDBoxLayout:
                    #md_bg_color: "#005500"
                    padding: dp(10), dp(0)
                    adaptive_height: True
                    MDLabel:
                        id: city_name
                        halign: "center"
                        font_style: "Body"
                        role: "large"
                        text: root.city_name
                        theme_text_color: "Custom"
                        text_color: "white"